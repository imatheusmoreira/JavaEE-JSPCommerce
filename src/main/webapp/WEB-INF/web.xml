<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>CheckCredentials</display-name>
		<servlet-name>CheckCredentials</servlet-name>
		<servlet-class>br.edu.ifce.servlets.CheckCredentials</servlet-class>
		<init-param>
			<param-name>admin</param-name>
			<param-value>admin</param-value>
		</init-param>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ProdutosServlet</display-name>
		<servlet-name>ProdutosServlet</servlet-name>
		<servlet-class>br.edu.ifce.servlets.ProdutosServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ProdutoServlet</display-name>
		<servlet-name>ProdutoServlet</servlet-name>
		<servlet-class>br.edu.ifce.servlets.ProdutoServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ProdutoSucessoServlet</display-name>
		<servlet-name>ProdutoSucessoServlet</servlet-name>
		<servlet-class>br.edu.ifce.servlets.ProdutoSucessoServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>Logout</display-name>
		<servlet-name>Logout</servlet-name>
		<servlet-class>br.edu.ifce.servlets.Logout</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CheckCredentials</servlet-name>
		<url-pattern>/CheckCredentials</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProdutosServlet</servlet-name>
		<url-pattern>/produtos</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProdutoServlet</servlet-name>
		<url-pattern>/produto</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProdutoSucessoServlet</servlet-name>
		<url-pattern>/sucesso</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
</web-app>